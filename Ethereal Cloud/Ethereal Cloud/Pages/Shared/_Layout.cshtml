<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ethereal_Cloud</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ethereal_Cloud.styles.css" asp-append-version="true" />
</head>
<body>

    <!--Screen-->
    <div class="container-fluid">



        <!--Sidebar-->
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarToggler">
                            <a class="navbar-brand" href="#">Ethereal Cloud</a>
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-pills nav-justified">
                                <li class="nav-item">
                                    <a class="nav-link @(Context.Request.Path == "/Index" || Context.Request.Path == "/" ? "active" : "")" asp-area="" asp-page="/Index">Index</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(Context.Request.Path == "/Account" ? "active" : "")" asp-area="" asp-page="/Account">Account</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                                </li>
                            </ul>
                            <form class="d-flex">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>
                        </div>
                    </div>

                </nav>
            </nav>


            <!--Topbar-->
            <header class="sticky-top">
                <h1>hello</h1>
            </header>

            <!--Page Content-->
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

                @RenderBody()

            </main>

            <!--Footer-->
            <footer class="footer text-muted col">
                <div class="container">
                    &copy; 2023 - Ethereal_Cloud - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>