@page
@model Ethereal_Cloud.Pages.LoginSignupModel
@{
    <meta charset="utf-8">
    Layout = null;
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/Site.css" asp-append-version="true">
    <link rel="stylesheet" href="/css/Index.css" asp-append-version="true">

    <center class="align-content-center">
        <img src="~/Logo.png" alt="logo" class="logo">
        <h1>Ethereal Cloud</h1>

        <!-- Main box -->
        <div class="main">
            <input type="checkbox" id="chk" aria-hidden="true">

            <!--Sign up -->
            <div class="signup">
                <form method="post" asp-page-handler="Signup">
                    <label class="labelstart" for="chk" aria-hidden="true">Sign up</label>
                    <input id="username" name="username" placeholder="username" required="">

                    <input type="email" id="email" name="email" placeholder="Email" required="" />
                    <input type="password" id="password" name="password" placeholder="Password" required="" />

                    <input type="password" id="confpassword" name="pswd" placeholder="Confirm password" required="">
                    <button type="submit">Sign Up</button>
                </form>                        
            </div>

            <!-- Login  -->
            <div class="login">
                <form method="post" asp-page-handler="Login">
                    <label class="labelbottom" for="chk" aria-hidden="true">Login</label>
                    <input id="username" name="username" placeholder="Username Or Email" required="" />
                    <input type="password" id="password" name="password" placeholder="Password" required="" />
                    <button type="submit">Login</button>
                </form>
            </div>
        </div>

        <!--Remove the bypass later once development has finished!-->                
        <ul id="remove-later-link">
            <li class="button">
                <a class="temp-link @(Request.Path == "/Upload" || Request.Path == "/" ? "active" : "")" asp-area="" asp-page="/Upload"><b>Press to bypass login!</b></a>
            </li>
        </ul>

    </center>


    <!-- Console logger -->
    <script>
        var logger = '@ViewData["logger"]';
        if (logger !== null) {
            console.log(logger);
        }
    </script>
}