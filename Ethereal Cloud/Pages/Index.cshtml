@page
@model Ethereal_Cloud.Pages.LoginSignupModel
@{
    <meta charset="utf-8">
    Layout = null;
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/Site.css" asp-append-version="true">
    <link rel="stylesheet" href="/css/Index.css" asp-append-version="true">

    <center class="align-content-center">
        <img src="~/images/LogoVector.svg" alt="logo" class="logo">
        <h1>Ethereal Cloud</h1>        

        <!-- Main box -->
        <div class="upload-page container mx-auto">
            <div class="main">
                <input type="checkbox" id="chk" aria-hidden="true">

                <!--Sign up -->
                <div class="signup">
                    <form method="post" asp-page-handler="Signup">
                        <div class="form-group">

                            <label class="labelstart" for="chk" aria-hidden="true">Sign up</label>
                            <input id="username" name="username" placeholder="Username" required="">

                            <input type="email" id="email" name="email" placeholder="Email" required="" />
                            <input type="password" id="password" name="password" placeholder="Password" required="" />

                            <input type="password" id="PasswordConf" name="PasswordConf" placeholder="Confirm password" required="">
                            <button id="button2" type="submit">Sign Up</button>
                        </div>
                    </form>                        
                </div>

                <!-- Login  -->
                <div class="login">
                    <form method="post" asp-page-handler="Login">
                        <div class="form-group">
                            <label class="labelbottom" for="chk" aria-hidden="true">Login</label>
                            <input id="username" name="username" placeholder="Email or Username" required="" />
                            <input type="password" id="password" name="password" placeholder="Password" required="" />
                            <button id="button2" type="submit">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="popup-message">
            @if (Model.errornum == -1)
            {

            }

            @if (Model.errornum == 0)
            {
                <!-- Success Alert -->
                <div class="alert alert-success alert-dismissible fade show">
                    <strong>Success!</strong> You have successfully registered.
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.errornum == 1)
            {
                <!-- Error Alert -->
                <div class="alert alert-danger alert-dismissible fade show">
                    <strong>Error!</strong> A problem has been occurred while submitting your data.
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.errornum == 2)
            {
                <!-- Error Alert -->
                <div class="alert alert-danger alert-dismissible fade show" id="popup">
                    <strong>Error!</strong> Your passwords didn't match
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </center>

    <!-- Console logger -->
    <script>
        var logger = '@ViewData["logger"]';
        if (logger !== null) {
            console.log(logger);
        }        
    </script>
}