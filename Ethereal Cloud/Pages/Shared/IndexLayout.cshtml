<center class="align-content-center">
    <!-- Main -->
    <main class="row">
        <img src="~/Logo.png" alt="logo" class="logo">
        <h1>Ethereal Cloud</h1>

        <!-- Content -->
        <div class="content col-10">
            <!-- Topbar -->
            <nav class="navbar"></nav>
            <div class="main">
                <input type="checkbox" id="chk" aria-hidden="true">

                <!--Sign up -->
                <div class="signup">
                    <form method="post" asp-page-handler="Signup">
                        <label class="labelstart" for="chk" aria-hidden="true">Sign up</label>
                        <input type="username" id="username" name="username" placeholder="username" required="">

                        <input type="email" id="email" name="email" placeholder="Email" required="" />
                        <input type="password" id="password" name="password" placeholder="Password" required="" />

                        <input type="password" name="pswd" placeholder="Confirm password" required="">
                        <button type ="submit">SignUp</button>
                    </form>

                    <script>
                        var popupStatus = '@ViewData["PopupStatus"]';
                        alert(popupStatus);
                    </script>
                </div>

                <!-- Login  -->
                <div class="login">
                    <form method="post" asp-page-handler="Login">
                        <label class="labelbottom" for="chk" aria-hidden="true">Login</label>
                        <input type="email" id="email" name="email" placeholder="Email" required="" />
                        <input type="password" id="password" name="password" placeholder="Password" required="" />
                        <button type="submit">Login</button>
                    </form>

                    <script>
                        var popupStatus = '@ViewData["PopupStatus"]';
                        alert(popupStatus);
                    </script>
                </div>
            </div>

            <!--Bypass -->
            <ul class="sidebar-body navbar-nav me-auto mb-2 mb-lg-0 nav-pills nav-justified">
                <li class="button">
                    <a class="nav-link @(Context.Request.Path == "/Upload" || Context.Request.Path == "/" ? "active" : "")" asp-area="" asp-page="/Upload">Press to bypass the login page!</a>
                </li>
            </ul>

            <div class="content render-body">
                @RenderBody()
            </div>
        </div>
    </main>
</center>