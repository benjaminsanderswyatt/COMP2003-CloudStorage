@page
@model Ethereal_Cloud.Pages.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "Shared/_Layout.cshtml";
    <link rel="stylesheet" href="/css/Login.css" asp-append-version="true">
}

<div class="main">
    <div class="login-container align-items-center">
        <h2>Login</h2>

        <!-- Success/error messages -->
        <div class="popup-message">
            @if (Model.errornum == -1) { }

            @if (Model.errornum == 0)
            {
                <!-- Error Alert -->
                <div class="alert alert-danger alert-dismissible fade show mx-auto" id="popup">
                    <strong>Error!</strong> The username or password is incorrect
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>

        <!-- Login form -->
        <form method="post" asp-page-handler="Login">
            <div class="form-floating">
                <input id="username" class="form-control" name="username" placeholder=" " required>
                <label for="email">Email</label>
            </div>

            <div class="form-floating">
                <input type="password" class="form-control" name="Password" id="Password" placeholder=" " required>
                <label for="password">Password</label>
                <span class="password-toggle" onclick="togglePassword()">Show</span>
            </div>

            <div class="mb-3">
                <a href="/Register" class="text-muted text-end">Forgot Password?</a>
            </div>

            <div class="mb-3">
                <button type="submit" id="button2" class="btn btn-primary">Login</button>
            </div>

            <div class="mb-3">
                Don't have an account?
                <a href="/Register" class="text-primary">Sign Up</a>
            </div>
        </form>
    </div>    
</div>

<!-- Console logger -->
<script>
    function togglePassword() {
        const passwordInput = document.getElementById('Password');
        passwordInput.type = (passwordInput.type === 'password') ? 'text' : 'password';
    }

    var logger = '@ViewData["logger"]';
    if (logger !== null) {
        console.log(logger);
    }
</script>