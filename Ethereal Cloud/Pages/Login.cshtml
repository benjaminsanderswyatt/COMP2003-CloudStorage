@page
@model Ethereal_Cloud.Pages.LoginModel
@{
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/Site.css" asp-append-version="true">
    <title>Login</title>
    Layout = null;
    <link rel="stylesheet" href="/css/Login.css" asp-append-version="true">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- Logo on left side -->
            <div class="navbar-brand">
                <img src="~/images/LogoVector.svg" alt="logo" class="logo">
            </div>
        </div>
    </nav>

    <div class="main">
        <div class="login-container align-items-center">
            <h2>Login</h2>

            <!-- Success/error messages -->
            <div class="popup-message">
                @if (Model.errornum == -1) { }

                @if (Model.errornum == 0)
                {
                    <!-- Error Alert -->
                    <div class="alert alert-danger alert-dismissible fade show mx-auto" id="popup">
                        <strong>Error!</strong> The username or password is incorrect
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
            </div>

            <!-- Login form -->
            <form method="post" asp-page-handler="Login">

                <!-- Username field -->
                <div class="form-floating">
                    <input asp-for="loginDetails.UsernameOrEmail" class="form-control" placeholder=" " required>
                    <label for="email">Email</label>
                </div>

                <!-- Password field -->
                <div class="form-floating">
                    <input type="password" asp-for="loginDetails.Password" class="form-control" placeholder=" " required>
                    <label for="password">Password</label>
                    <span class="password-toggle" onclick="togglePassword()">Show</span>
                </div>

                <div class="mb-3">
                    <a href="/Register" id="forgot-pass" class="text-muted text-end">Forgot Password?</a>
                </div>

                <!-- Submit button -->
                <div class="mb-3">
                    <button type="submit" id="login-btn" class="btn btn-primary">Login</button>
                </div>

                <div class="mb-3">
                    Don't have an account?
                    <a href="/Register" class="text-primary">Register</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Toggle button to show passwords
        function togglePassword() {
            const passwordInput = document.getElementById('Password');
            passwordInput.type = (passwordInput.type === 'password') ? 'text' : 'password';
        }

        // Logger for errors
        var logger = '@ViewData["logger"]';
        if (logger !== null) {
            console.log(logger);
        }
    </script>
}