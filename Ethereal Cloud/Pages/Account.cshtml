@page
@model Ethereal_Cloud.Pages.AccountModel
@{
    ViewBag.Title = "Account";
    Layout = "Shared/_Layout.cshtml";
    <link rel="stylesheet" href="/css/Account.css" asp-append-version="true">
}

<div class="row mt-3 align-content-center">
    <h2>Manage your account</h2>
    <div class="logout-button text-center">
        <a href="#" onclick="deleteAuthTokenCookie()" class="btn btn-primary">Logout here!</a>
    </div>
</div>

<script>
    function deleteAuthTokenCookie() {
        document.cookie = "AuthToken=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";        
    }
</script>