@page
@model Ethereal_Cloud.Pages.UploadModel
@{
    <meta charset="utf-8">
    <title>Upload</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    Layout = null;
    <link rel="stylesheet" href="/css/Site.css" asp-append-version="true">
    <link rel="stylesheet" href="/css/Upload.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <img src="~/Logo.png" alt="logo" class="logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:void(0)">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:void(0)">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:void(0)">Link</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="text" placeholder="Search">
                    <button class="btn btn-primary" type="button">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-3">
        <h3>Navbar Forms</h3>
        <p>You can also include forms inside the navigation bar.</p>

        <!-- Box at top of screen -->
        <div class="text-box">
            <div>
                <form method="post" asp-page-handler="File">
                    <button type="submit">File</button>
                </form>
            </div>

            <h2>Files</h2>

            @if (Model.Files != null)
            {
                @foreach (var file in Model.Files)
                {
                    <div>
                        <span>@file.Filename</span>
                        <a asp-page-handler="Download" asp-route-filename="@file.Filename">Download</a>
                    </div>
                }
            }
            else
            {
                <p>No files available.</p>
            }
        </div>

        <!-- Box at bottom of screen -->
        <div class="upload-box">
            <h1>Upload</h1>
            <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
                <div>
                    <label for="fileInput">Choose a file:</label>
                    <input type="file" id="fileInput" name="uploadedFile" />
                </div>
                <div>
                    <input type="submit" value="Upload" />
                </div>
            </form>
        </div>
    </div>
}